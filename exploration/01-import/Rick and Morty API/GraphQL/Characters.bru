meta {
  name: Characters
  type: graphql
  seq: 1
}

post {
  url: https://rickandmortyapi.com/graphql
  body: graphql
  auth: none
}

body:graphql {
  query ($page: Int, $name: String) {
    characters(page: $page, filter: { name: $name }) {
      info {
        count
      }
      results {
        name
      }
    }
    location(id: 1) {
      id
    }
    episodesByIds(ids: [1, 2]) {
      id
    }
  }
}

body:graphql:vars {
  {
    "page": 2,
    "name": "rick"
  }
}
